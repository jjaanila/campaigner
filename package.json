{
  "name": "campaigner",
  "description": "A Vue.js project",
  "version": "1.1.0",
  "author": "Janne Jaanila <janne.jaanila@gmail.com>",
  "license": "MIT",
  "private": false,
  "main": "./src/index.js",
  "homepage": "https://jjaanila.github.io/campaigner",
  "bin": {
    "campaigner": "./src/campaigner.js"
  },
  "scripts": {
    "predeploy": "npm run build",
    "deploy-example": "gh-pages -d dist",
    "prepare": "husky install",
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "cross-env webpack-dev-server --mode=development --open --hot",
    "build": "rm -rf ./dist/* && cross-env webpack --mode=production --progress",
    "validate": "node ./scripts/validate.js",
    "release": "npm run build && rm dist/*.js* && (cd dist; zip -r $npm_package_name-v$npm_package_version.zip .)",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "eslint": "eslint src scripts *.js --ext .vue,.js --max-warnings=0",
    "eslint:fix": "npm run eslint -- --fix"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "dependencies": {
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "babel-loader": "^8.2.3",
    "cross-env": "^5.0.5",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "file-loader": "^6.2.0",
    "gh-pages": "^3.2.3",
    "html-webpack-plugin": "^5.5.0",
    "image-webpack-loader": "^8.1.0",
    "jsonschema": "^1.4.0",
    "normalize.css": "^8.0.1",
    "pug": "^3.0.2",
    "pug-loader": "^2.4.0",
    "terser-webpack-plugin": "^5.3.1",
    "url-loader": "^4.1.1",
    "vue": "^2.5.11",
    "vue-click-outside": "^1.1.0",
    "vue-loader": "^15.9.8",
    "vue-template-compiler": "^2.6.14",
    "vuex": "^3.6.2",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.3"
  },
  "devDependencies": {
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.4.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "prettier": "^2.5.1"
  },
  "engine": {
    "node": ">=16.0.0"
  }
}
