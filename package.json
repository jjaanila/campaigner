{
  "name": "campaigner",
  "description": "Dungeons and Dragons campaign framework",
  "version": "1.0.1",
  "author": "Janne Jaanila (https://github.com/jjaanila)",
  "contributors": [
    "Taneli Hukkinen (https://github.com/hukkin)"
  ],
  "license": "MIT",
  "private": false,
  "main": "./src/index.js",
  "homepage": "https://github.com/jjaanila/campaigner",
  "repository": {
    "type": "git",
    "url": "https://github.com/jjaanila/campaigner.git"
  },
  "files": [
    "src/**/*",
    "!src/**/*.test.js",
    "babel.config.js",
    "webpack.config.js",
    "templates",
    "scripts"
  ],
  "bin": {
    "campaigner": "./src/campaigner.js"
  },
  "scripts": {
    "deploy-example": "npm run build && gh-pages -d dist",
    "prepare": "husky install",
    "test": "jest",
    "test:cypress": "cypress run",
    "test:watch": "jest --watch",
    "start": "cross-env webpack-dev-server --mode=development --open --hot",
    "build": "rm -rf ./dist/* && cross-env webpack --mode=production --progress && rm dist/*.js*",
    "validate": "node ./scripts/validate.js",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "eslint": "eslint src cypress scripts *.js --ext .vue,.js --max-warnings=0",
    "eslint:fix": "npm run eslint -- --fix"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "dependencies": {
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@popperjs/core": "^2.11.3",
    "babel-loader": "^8.2.3",
    "cross-env": "^5.0.5",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "file-loader": "^6.2.0",
    "fuse.js": "^6.5.3",
    "gh-pages": "^3.2.3",
    "html-webpack-plugin": "^5.5.0",
    "image-webpack-loader": "^8.1.0",
    "jsonschema": "^1.4.0",
    "lodash": "^4.17.21",
    "normalize.css": "^8.0.1",
    "pug": "^3.0.2",
    "pug-loader": "^2.4.0",
    "regenerator-runtime": "^0.13.9",
    "terser-webpack-plugin": "^5.3.1",
    "url-loader": "^4.1.1",
    "vue": "^3.2.31",
    "vue-click-outside": "^1.1.0",
    "vue-loader": "^17.0.0",
    "vue-style-loader": "^4.1.3",
    "vue3-click-away": "^1.2.1",
    "vuex": "^4.0.2",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.3"
  },
  "devDependencies": {
    "cypress": "^9.5.1",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.4.1",
    "http-server": "^14.1.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "prettier": "^2.5.1"
  },
  "engine": {
    "node": ">=16.0.0"
  }
}
